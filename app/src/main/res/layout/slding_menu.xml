<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/iv_left_menu"
            android:src="@mipmap/tangwei"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cimg_sliding"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="120dp"
            android:src="@mipmap/tangwei3"
            app:civ_border_width="4dp"
            app:civ_border_color="#fff"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:layout_marginTop="120dp"
            android:layout_marginLeft="15dp"
            android:text="Joker"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:layout_toRightOf="@id/cimg_sliding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="12dp"
            android:layout_marginTop="200dp"
            android:text="永远年轻，永远热泪盈眶。"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="230dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/erweima"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/Rec_Sliding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>
